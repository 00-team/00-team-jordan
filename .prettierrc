{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "useTabs": false,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": ["*.jsonc", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ],

    "importOrderSeparation": true,
    "importOrder": [
        "(^react$|^react-dom|^BaseComponent$)",
        "^@00-team/utils",
        "/?icons",
        "<THIRD_PARTY_MODULES>",
        "/?types",
        "/?layout/",
        "(/?comps/|/?components/)",
        "/?utils/",
        "/videos/",
        "\\./(?!style)",
        "/style/"
    ]
}
